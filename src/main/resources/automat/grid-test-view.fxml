<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<GridPane prefHeight="600.0" prefWidth="800.0"
          xmlns="http://javafx.com/javafx/11.0.2">
    <rowConstraints>
        <RowConstraints percentHeight="70.0" />
        <RowConstraints percentHeight="30.0" />
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints percentWidth="30.0" />
        <ColumnConstraints percentWidth="70.0" />
        <ColumnConstraints percentWidth="20.0" />
    </columnConstraints>
    <Region style="-fx-background-color: grey;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Region style="-fx-background-color: yellow;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Region style="-fx-background-color: green;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Region style="-fx-background-color: black;" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Region style="-fx-background-color: blue;" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
    <Region style="-fx-background-color: orange;" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
</GridPane>